@{
    Layout = null;
    var message = TempData["Message"]?.ToString();
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" charset="utf-8" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Work+Sans:wght@500&display=swap" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="/css/cadastro.css" />
    <link rel="stylesheet" type="text/css" href="/css/menu.css">
    <title>Cadastro de produto</title>
</head>
<body>
    <header>
        <nav>
            <a class="logo" href="/Produto/Index">Controle de Estoque</a>
            <div class="mobile-menu">
                <div class="linha1"></div>
                <div class="linha2"></div>
                <div class="linha3"></div>
            </div>
            <ul class="nav-list">
                <li><a href="/Home/Privacy">Sobre</a></li>
                <li><a href="/Produto/Index">Produtos</a></li>
                <li><a href="/Usuario/ConfirmarSenha">Editar Usuário</a></li>
                <li><a href="/Usuario/Logout">Sair</a></li>
            </ul>
        </nav>
    </header>
    <div class="container">
        <div class="form-image">
            <img src="~/Resources/manutencao.jpg" />
        </div>
        <div class="form">
            @if (!string.IsNullOrEmpty(message))
            {
                <b>@message</b>
            }
            <form method="post">
                <div class="form-header">
                    <div class="titulo">
                        <h1>Cadastrar</h1>
                    </div>
                </div>
                <div class="input-group">
                    <div class="input-box">
                        <label>Nome</label>
                        <input type="text" id="txtNome" name="txtNome" />
                    </div>
                    <div class="input-box">
                        <label>Preço</label>
                        <input type="text" id="txtPreco" name="txtPreco" />
                    </div>
                    <div class="input-box">
                        <label>Quantidade</label>
                        <input type="text" id="txtQuantidade" name="txtQuantidade" />
                    </div>
                    <div class="input-box">
                        <label>Observações</label>
                        <input type="text" id="txtObservacoes" name="txtObservacoes" />
                    </div>
                    <div class="continue-button">
                        <button type="submit" formaction="Inserir" id="btnSalvar" name="btnSalvar">Salvar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</body>
</html>
