@model List<EstoqueMVC.Models.Produto>

@{
    Layout = null;
    var message = TempData["Message"]?.ToString();
}

<!DOCTYPE html>
<html>
    <head>
        <title>Lista de produto</title>
    </head>
    <body>
        @if (!string.IsNullOrEmpty(message))
        {
            <br />
            <b>@message</b>
            <br />
            <br />
        }
       <table>
            <thead>
                <tr>
                    <th>Id Produto</th>
                    <th>Nome</th>
                    <th>Preço</th>
                    <th>Quantidade</th>
                    <th>Observacoes</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var produto in Model)
                {
                    <tr>
                        <td>
                            @produto.idProduto
                        </td>
                        <td>
                            @produto.Nome
                        </td>
                        <td>
                            @produto.Preco
                        </td>
                        <td>
                            @produto.Quantidade
                        </td>
                        <td>
                            @produto.Observacoes
                        </td>
                        <td>
                            <a asp-controller="Produto" asp-action="Alterar" asp-route-id="@produto.idProduto">Editar</a>
                        </td>
                        <td>
                            <a asp-controller="Produto" asp-action="Excluir" asp-route-id="@produto.idProduto">Excluir</a>
                        </td>
                    </tr>
                }
            </tbody>
       </table>
       <a asp-controller="Produto" asp-action="Cadastro">Cadastro</a>
    </body>

</html>