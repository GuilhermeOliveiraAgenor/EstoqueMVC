@{

    Layout = null;
    var message = TempData["Message"]?.ToString();

}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Work+Sans:wght@500&display=swap" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="~/css/login.css" />
    <title>@ViewData["Title"] - EstoqueMVC</title>
</head>
<body>
    <div class="container">
        <div class="card">
            <h1>Login</h1>
            <form method="post">
                @if (!String.IsNullOrEmpty(message))
                {
                    <br />
                    <b>@message</b>
                    <br />
                    <br />
                }
                <div class="text-float">
                    <label>Email</label>
                    <input type="text" id="txtEmail" name="txtEmail" />
                </div>
                <br />
                <div class="text-float">
                    <label>Senha</label>
                    <input type="password" id="txtSenha" name="txtSenha" />
                </div>
                <br />
                <div class="botao">
                    <button type="submit" formaction="/Usuario/Logar" id="btnLogin" name="btnLogin">Logar</button>
                </div>
                <br />
                <br />
                <br />
                <a asp-controller="Usuario" asp-action="Cadastro">Clique aqui para fazer seu cadastro</a>
            </form>
        </div>
    </div>
    <div>
        <main>
            @RenderBody()
        </main>
    </div>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>